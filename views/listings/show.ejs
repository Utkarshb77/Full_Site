<% layout("/layouts/boilerplate") %>

    <body>

        <div class="row mt-4">
            <div class="col-8 offset-2">
                <h4 class="my-4">Listing Details:</h4>
            </div>
            <div class="card col-6 offset-2">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image"><br>
                <div class="card-body">
                    <b>
                        <p class="card-text">
                            <%= listing.title %>
                        </p>
                    </b> <br>
                    <b>About: </b>
                    <%= listing.description %> <br> <br>
                        <b>Price: </b>&#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                            <b>Location: </b>
                            <%= listing.location %> <br>
                                <b>Country: </b>
                                <%= listing.country %> <br>

                </div>
            </div>
            <br>
            <div class="btns">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-1 offset-2 edit-btn mb-4">Edit</a>

                <form action="/listings/<%= listing._id %>?_method=delete" method="post">
                    <button class="btn btn-dark offset-4 mb-4 black" type="submit">Delete</button>
            </div>
            </form>
        </div>

    </body>